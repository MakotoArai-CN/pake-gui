{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "pake",
          "cmd": "pake",
          "args": true
        }
      ]
    },
    {
      "identifier": "shell:allow-open",
      "allow": [
        {
          "name": "pake",
          "cmd": "pake",
          "args": true
        }
      ]
    },
    "shell:allow-stdin-write",
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "fs:default",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-read-dir",
    "fs:allow-copy-file",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:allow-exists"
  ]
}